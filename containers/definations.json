[
  {
    "memory": 512,
    "cpu": 256,
    "secrets": [
      {
          "name": "DB_PASSWORD",
          "valueFrom": "${secret_arn}/DATABASE_PASSWORD"
      }
    ],
    "essential": true,
    "image": "${repo_url}",
    "name": "${container_name}",
    "portMappings": [
      {
        "containerPort": "${container_port}",
        "hostPort": "${container_port}"
      }
    ]
  }
]